@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-3xl font-bold mb-6">Welcome to Admin Dashboard</h1>

<p class="mb-8 text-gray-700">
    Use the sidebar to navigate through administrative tasks.
</p>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white p-6 rounded shadow">
        <h2 class="text-xl font-semibold mb-2">Companies</h2>
        <p class="text-gray-600 mb-4">Manage your companies here.</p>
        <a href="@Url.Action("ManageCompanies", "Admin")" 
           class="inline-block bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition">
            View Companies
        </a>
    </div>

    <!-- Example for additional dashboard cards -->
    <div class="bg-white p-6 rounded shadow">
        <h2 class="text-xl font-semibold mb-2">Users</h2>
        <p class="text-gray-600 mb-4">Manage application users and roles.</p>
        <a  href="@Url.Action("ViewUsers", "Admin")"  class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
            View Users
        </a>
    </div>
