@model CompanyDirectory.Models.Company

@{
    ViewData["Title"] = "Delete Company";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-3xl font-bold mb-6">Delete Company</h1>

<p class="mb-6 text-gray-700">Are you sure you want to delete this company?</p>

<div class="bg-white p-6 rounded shadow max-w-2xl">
    <h3 class="text-xl font-semibold mb-4">Company Details</h3>
    <dl class="grid grid-cols-2 gap-x-6 gap-y-4 text-gray-800">
        <dt class="font-semibold">Name:</dt>
        <dd>@Model.Name</dd>

        <dt class="font-semibold">Description:</dt>
        <dd>@Model.Description</dd>

        <dt class="font-semibold">Logo URL:</dt>
        <dd>@Model.LogoUrl</dd>

        <dt class="font-semibold">Website:</dt>
        <dd>
            <a href="@Model.Website" target="_blank" class="text-blue-600 hover:underline">
                @Model.Website
            </a>
        </dd>

        <dt class="font-semibold">Created At:</dt>
        <dd>@Model.CreatedAt.ToShortDateString()</dd>

        <dt class="font-semibold">Updated At:</dt>
        <dd>@Model.UpdatedAt.ToShortDateString()</dd>
    </dl>

    <form asp-action="DeleteCompany" method="post" class="mt-8 flex items-center space-x-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 text-white px-5 py-2 rounded hover:bg-red-700 transition duration-300">
            Delete
        </button>
        <a asp-action="ManageCompanies" class="text-gray-600 hover:underline">Cancel</a>
    </form>
</div>
