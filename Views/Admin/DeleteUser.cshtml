@model CompanyDirectory.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-2xl font-bold mb-6 text-red-600">Confirm Delete</h2>

<div class="bg-white p-6 rounded shadow max-w-xl">
    <p class="mb-4 text-gray-700">Are you sure you want to delete the following user?</p>

    <ul class="mb-4">
        <li><strong>Name:</strong> @($"{Model.FirstName} {Model.LastName}")</li>
        <li><strong>Email:</strong> @Model.Email</li>
        <li><strong>Mobile:</strong> @Model.Mobile</li>
        <li><strong>Role:</strong> @Model.Role</li>
    </ul>

    <form asp-action="DeleteUserConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
            Yes, Delete
        </button>
        <a href="@Url.Action("ManageUsers", "Admin")"
           class="ml-4 text-gray-700 hover:underline">Cancel</a>
    </form>
</div>
