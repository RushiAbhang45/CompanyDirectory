@model CompanyDirectory.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-2xl font-bold mb-6">Edit User</h2>

<form asp-action="EditUser" method="post" class="bg-white p-6 rounded shadow max-w-xl">
    <input type="hidden" asp-for="Id" />

    <div class="mb-4">
        <label asp-for="FirstName" class="block mb-1 font-semibold">First Name</label>
        <input asp-for="FirstName" class="form-input w-full border border-gray-300 rounded" />
        <span asp-validation-for="FirstName" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="LastName" class="block mb-1 font-semibold">Last Name</label>
        <input asp-for="LastName" class="form-input w-full border border-gray-300 rounded" />
        <span asp-validation-for="LastName" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Email" class="block mb-1 font-semibold">Email</label>
        <input asp-for="Email" class="form-input w-full border border-gray-300 rounded" readonly />
    </div>

    <div class="mb-4">
        <label asp-for="Mobile" class="block mb-1 font-semibold">Mobile</label>
        <input asp-for="Mobile" class="form-input w-full border border-gray-300 rounded" />
        <span asp-validation-for="Mobile" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Role" class="block mb-1 font-semibold">Role</label>
        <select asp-for="Role" class="form-select w-full border border-gray-300 rounded">
            <option value="User">User</option>
            <option value="Admin">Admin</option>
        </select>
        <span asp-validation-for="Role" class="text-red-600 text-sm"></span>
    </div>

    <button type="submit"
            class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Save Changes
    </button>
</form>
