@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Forgot Password</title>
    <link rel="stylesheet" href="~/css/output.css" />
</head>
<body class="flex justify-center items-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-xl shadow-md w-full max-w-md space-y-6">
        <h2 class="text-2xl font-bold text-center text-gray-800">Forgot Password</h2>
        <form asp-action="ForgotPassword" method="post" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700">Enter your registered email</label>
                <input name="email" type="email" required class="w-full border px-3 py-2 rounded-lg" />
                <span class="text-sm text-red-600">@ViewBag.Message</span>
            </div>
            <button type="submit" class="w-full bg-red-600 text-white py-2 rounded-lg hover:bg-red-700">Send Reset Link</button>
        </form>
        <div class="text-center text-sm">
            <a asp-action="Login" class="text-blue-600 hover:underline">Back to Login</a>
        </div>
    </div>
</body>
</html>
