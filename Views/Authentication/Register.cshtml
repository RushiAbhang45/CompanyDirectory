@model CompanyDirectory.ViewModels.RegisterViewModel

@{
       Layout = null;
    ViewData["Title"] = "Register";
}
  <link rel="stylesheet" href="~/css/output.css" />
<div class="min-h-screen flex items-center justify-center bg-gray-100 p-6">
    <div class="max-w-md w-full bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Create an Account</h2>

        <form asp-action="Register" method="post" novalidate>
            <div class="mb-4">
                <label asp-for="FirstName" class="block text-gray-700 font-semibold mb-1"></label>
                <input asp-for="FirstName" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-600" />
                <span asp-validation-for="FirstName" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="LastName" class="block text-gray-700 font-semibold mb-1"></label>
                <input asp-for="LastName" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-600" />
                <span asp-validation-for="LastName" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 font-semibold mb-1"></label>
                <input asp-for="Email" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-600" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Mobile" class="block text-gray-700 font-semibold mb-1"></label>
                <input asp-for="Mobile" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-600" />
                <span asp-validation-for="Mobile" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-700 font-semibold mb-1"></label>
                <input asp-for="Password" type="password" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-600" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-6">
                <label asp-for="ConfirmPassword" class="block text-gray-700 font-semibold mb-1"></label>
                <input asp-for="ConfirmPassword" type="password" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-600" />
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
        <label class="block text-gray-700 font-semibold mb-1">
            What is @Model.CaptchaNum1 + @Model.CaptchaNum2? <span class="text-red-600">*</span>
        </label>
        <input asp-for="CaptchaAnswer" 
               class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-600" />
        <span asp-validation-for="CaptchaAnswer" class="text-red-600 text-sm"></span>
    </div>

    <!-- Hidden inputs to keep the captcha numbers -->
    <input type="hidden" asp-for="CaptchaNum1" />
    <input type="hidden" asp-for="CaptchaNum2" />
    

            <button type="submit" class="w-full bg-red-600 text-white font-semibold py-2 rounded hover:bg-red-700 transition duration-300">
                Register
            </button>
        </form>

        <p class="mt-4 text-center text-gray-600 text-sm">
            Already have an account? <a asp-action="Login" class="text-red-600 hover:underline">Login here</a>.
        </p>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJQ5ujMw91mwZX67zQ/iMx1niNX6Mewykwm0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}
