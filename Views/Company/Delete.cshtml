@model CompanyDirectory.Models.Company

@{
    ViewData["Title"] = "Delete Company";
}

<h1 class="text-3xl font-bold text-gray-800 mb-4 text-center">Delete Company</h1>

<div class="max-w-2xl mx-auto bg-white p-6 rounded-xl shadow-md">
    <h3 class="text-lg font-semibold text-red-600 mb-4">Are you sure you want to delete this company?</h3>

    <div class="grid grid-cols-1 gap-4 mb-6">
        <div>
            <span class="font-medium text-gray-700">Name:</span>
            <div class="text-gray-900">@Html.DisplayFor(model => model.Name)</div>
        </div>
        <div>
            <span class="font-medium text-gray-700">Description:</span>
            <div class="text-gray-900">@Html.DisplayFor(model => model.Description)</div>
        </div>
        <div>
            <span class="font-medium text-gray-700">Logo URL:</span>
            <div class="text-blue-600 break-all">@Html.DisplayFor(model => model.LogoUrl)</div>
        </div>
        <div>
            <span class="font-medium text-gray-700">Website:</span>
            <div class="text-blue-600 break-all">@Html.DisplayFor(model => model.Website)</div>
        </div>
        <div>
            <span class="font-medium text-gray-700">Created At:</span>
            <div class="text-gray-900">@Html.DisplayFor(model => model.CreatedAt)</div>
        </div>
        <div>
            <span class="font-medium text-gray-700">Updated At:</span>
            <div class="text-gray-900">@Html.DisplayFor(model => model.UpdatedAt)</div>
        </div>
    </div>

    <form asp-action="Delete" class="flex items-center gap-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="bg-red-600 hover:bg-red-700 text-white font-semibold px-5 py-2 rounded-lg transition" />
        <a asp-action="Index" class="text-blue-600 hover:underline">Back to List</a>
    </form>
</div>
