@model CompanyDirectory.Models.Company

@{
    ViewData["Title"] = "Delete Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Delete Company</h1>

<div class="max-w-2xl mx-auto bg-white p-8 rounded-xl shadow-md">
    <h2 class="text-lg font-semibold text-red-700 mb-6 text-center">
        Are you sure you want to permanently delete this company?
    </h2>

    <div class="grid grid-cols-1 gap-4 mb-8">
        <div>
            <span class="block font-medium text-gray-700">Name:</span>
            <div class="text-gray-900">@Html.DisplayFor(model => model.Name)</div>
        </div>
        <div>
            <span class="block font-medium text-gray-700">Description:</span>
            <div class="text-gray-900">@Html.DisplayFor(model => model.Description)</div>
        </div>
        <div>
            <span class="block font-medium text-gray-700">Logo URL:</span>
            <div class="text-blue-600 break-all">@Html.DisplayFor(model => model.LogoUrl)</div>
        </div>
        <div>
            <span class="block font-medium text-gray-700">Website:</span>
            <div class="text-blue-600 break-all">@Html.DisplayFor(model => model.Website)</div>
        </div>
        <div>
            <span class="block font-medium text-gray-700">Created At:</span>
            <div class="text-gray-900">@Html.DisplayFor(model => model.CreatedAt)</div>
        </div>
        <div>
            <span class="block font-medium text-gray-700">Updated At:</span>
            <div class="text-gray-900">@Html.DisplayFor(model => model.UpdatedAt)</div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="flex items-center justify-between">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2 rounded-lg transition">
            Yes, Delete
        </button>
        <a asp-action="Index" class="text-blue-600 hover:underline">Cancel & Go Back</a>
    </form>
</div>
