@model CompanyDirectory.Models.Company

@{
    ViewData["Title"] = "Company Details";
}
<link rel="stylesheet" href="~/css/output.css" />

<div class="max-w-4xl mx-auto bg-white shadow-lg rounded-lg p-6 mt-10 space-y-6 border border-gray-200">

    <!-- Top Action Buttons -->
    <div class="flex justify-between">
        <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded text-sm flex items-center gap-2">
            <i class="fas fa-print"></i> Print Details
        </button>
        <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded text-sm flex items-center gap-2">
            <i class="fas fa-envelope"></i> Send Enquiry
        </button>
    </div>

    <!-- Info Table Style Layout -->
    <div class="border text-sm divide-y divide-gray-200">
        <div class="grid grid-cols-3">
            <div class="bg-gray-100 font-medium px-4 py-2">Company Name</div>
            <div class="col-span-2 px-4 py-2">@Model.Name</div>
        </div>
        <div class="grid grid-cols-3">
            <div class="bg-gray-100 font-medium px-4 py-2">Description</div>
            <div class="col-span-2 px-4 py-2">@Model.Description</div>
        </div>
        <div class="grid grid-cols-3 items-center">
            <div class="bg-gray-100 font-medium px-4 py-2">Logo</div>
            <div class="col-span-2 px-4 py-2">
                @if (!string.IsNullOrEmpty(Model.LogoUrl))
                {
                    <img src="@Model.LogoUrl" alt="@Model.Name Logo" class="h-16 bg-gray-50 border p-1 rounded" />
                }
                else
                {
                    <span class="text-gray-400">No logo available</span>
                }
            </div>
        </div>
        <div class="grid grid-cols-3">
            <div class="bg-gray-100 font-medium px-4 py-2">Website</div>
            <div class="col-span-2 px-4 py-2">
                @if (!string.IsNullOrEmpty(Model.Website))
                {
                    <a href="@Model.Website" class="text-blue-600 hover:underline" target="_blank">@Model.Website</a>
                }
                else
                {
                    <span class="text-gray-400">N/A</span>
                }
            </div>
        </div>
        <div class="grid grid-cols-3">
            <div class="bg-gray-100 font-medium px-4 py-2">Created At</div>
            <div class="col-span-2 px-4 py-2">@Model.CreatedAt.ToString("dd MMM yyyy")</div>
        </div>
        <div class="grid grid-cols-3">
            <div class="bg-gray-100 font-medium px-4 py-2">Last Updated</div>
            <div class="col-span-2 px-4 py-2">@Model.UpdatedAt.ToString("dd MMM yyyy")</div>
        </div>
    </div>

    <!-- Back Link -->
    <div>
        <a asp-action="Index" class="text-blue-600 hover:underline text-sm">Back to List</a>
    </div>

    <!-- Bottom Action Buttons -->
    <div class="flex justify-between mt-4">
        <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded text-sm flex items-center gap-2">
            <i class="fas fa-print"></i> Print Details
        </button>
        <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded text-sm flex items-center gap-2">
            <i class="fas fa-envelope"></i> Send Enquiry
        </button>
    </div>
</div>
