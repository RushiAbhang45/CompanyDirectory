<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Portal</title>
    <link href="~/css/output.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body class="flex min-h-screen">

    <!-- Sidebar -->
    <aside class="w-64 bg-gray-800 text-white p-6">
        <h2 class="text-2xl font-bold mb-8">Admin Panel</h2>
        <nav>
            <ul class="space-y-6">
                <li><a asp-controller="Admin" asp-action="Dashboard" class="block hover:text-red-400">Dashboard</a></li>
                <li><a asp-controller="Admin" asp-action="ManageCompanies" class="block hover:text-red-400">Manage Companies</a></li>
                <li><a asp-controller="Authentication" asp-action="Logout" class="block hover:text-red-400">Logout</a></li>
            </ul>
        </nav>
    </aside>

    <!-- Main content -->
    <main class="flex-1 bg-gray-100 p-8">
        @RenderBody()
    </main>

</body>
</html>
