@using Microsoft.AspNetCore.Http 
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/css/output.css" rel="stylesheet" />
</head>
<body class="min-h-screen bg-gray-100 font-sans text-gray-800">

    <div class="flex min-h-screen w-full">

        <!-- Sidebar -->
        <aside class="w-64 bg-gray-900 text-white px-6 py-8 shadow-lg">
            <h2 class="text-2xl font-semibold mb-10 tracking-wide">Admin Panel</h2>
            <nav>
                <ul class="space-y-4">
                    <li>
                        <a asp-controller="Admin" asp-action="Dashboard"
                           class="block py-2 px-3 rounded hover:bg-gray-700 transition duration-200">Dashboard</a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="ManageCompanies"
                           class="block py-2 px-3 rounded hover:bg-gray-700 transition duration-200">Manage Companies</a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="ViewUsers"
                           class="block py-2 px-3 rounded hover:bg-gray-700 transition duration-200">Manage Users</a>
                    </li>
                    <li>
                        <a asp-controller="Authentication" asp-action="Logout"
                           class="block py-2 px-3 rounded hover:bg-red-600 transition duration-200">Logout</a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main content -->
        <main class="flex-1 bg-gray-100 overflow-auto">

            <!-- Top Navbar with Breadcrumbs and Search -->
            <div class="bg-white px-6 py-4 shadow-md flex flex-wrap items-center justify-between gap-4 sticky top-0 z-10">

                <!-- Breadcrumbs Section -->
                <div class="flex-grow text-sm text-gray-500">
                    @RenderSection("Breadcrumbs", required: false)
                </div>

                <!-- Search Form -->
                <form asp-controller="Admin" asp-action="Search" method="get" class="flex items-center space-x-2">
                    <input type="text" name="term" placeholder="Search..." minlength="3"
                           class="px-3 py-2 border border-gray-300 rounded-md w-64 focus:outline-none focus:ring focus:border-blue-400"
                           required />
                    <button type="submit"
                            class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition">
                        Search
                    </button>
                </form>
            </div>

            <!-- Render Body -->
            <div class="p-6">
                @RenderBody()
            </div>
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
