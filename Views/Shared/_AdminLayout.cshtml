<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/css/output.css" rel="stylesheet" />
</head>
<body class="min-h-screen bg-gray-100">

    <div class="flex min-h-screen w-full">

        <!-- Sidebar -->
        <aside class="w-64 bg-gray-800 text-white p-6 flex-shrink-0">
            <h2 class="text-2xl font-bold mb-8">Admin Panel</h2>
            <nav>
                <ul class="space-y-6">
                    <li>
                        <a asp-controller="Admin" asp-action="Dashboard"
                           class="block hover:text-red-400 transition">Dashboard</a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="ManageCompanies"
                           class="block hover:text-red-400 transition">Manage Companies</a>
                    </li>
                    <li>
                        <a asp-controller="Authentication" asp-action="Logout"
                           class="block hover:text-red-400 transition">Logout</a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main content -->
        <main class="flex-1 p-8 bg-gray-100">
            @RenderBody()
        </main>

    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
