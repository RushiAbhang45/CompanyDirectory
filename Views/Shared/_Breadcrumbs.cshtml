@model List<(string Label, string? Url)>

<nav class="text-sm text-gray-500 mb-6" aria-label="Breadcrumb">
    <ol class="list-reset flex items-center space-x-2">
        @for (int i = 0; i < Model.Count; i++)
        {
            var crumb = Model[i];
            <li>
                @if (!string.IsNullOrEmpty(crumb.Url))
                {
                    <a href="@crumb.Url" class="hover:text-blue-600 text-blue-500">@crumb.Label</a>
                }
                else
                {
                    <span class="text-gray-700 font-medium">@crumb.Label</span>
                }
            </li>
            @if (i < Model.Count - 1)
            {
                <li><span>/</span></li>
            }
        }
    </ol>
</nav>
